---
import Layout from '../layouts/Layout.astro';
import ProfileHeader from '../components/ProfileHeader.astro';
import ChatWindow from '../components/ChatWindow';
---

<Layout>
  <main class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-slate-900 dark:to-slate-800 py-12 px-4 transition-colors duration-300">
    <div class="container mx-auto max-w-4xl">
      <ProfileHeader />
      <ChatWindow client:load />
    </div>
  </main>
</Layout>

<style>
  main {
    background-image: 
      radial-gradient(circle at 100% 100%, rgba(50, 69, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 0% 0%, rgba(188, 82, 238, 0.1) 0%, transparent 50%);
  }

  :global(.dark) main {
    background-image: 
      radial-gradient(circle at 100% 100%, rgba(99, 102, 241, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 0% 0%, rgba(167, 139, 250, 0.15) 0%, transparent 50%);
  }
</style>