---
import { Image } from 'astro:assets';
import AnimatedTitle from './AnimatedTitle';
import profileImage from '../assets/giancarlo.jpg';
---

<div class="flex flex-col items-center mb-12">
  <div class="relative group">
    <div class="absolute -inset-0.5 bg-gradient-to-r from-primary to-secondary rounded-full blur opacity-50 group-hover:opacity-75 transition duration-1000 group-hover:duration-200 animate-tilt"></div>
    <div class="relative w-32 h-32 rounded-full overflow-hidden shadow-xl transition-transform duration-300 group-hover:scale-105">
      <Image
        src={profileImage}
        alt="Giancarlo Zevallos"
        class="w-full h-full object-cover"
        width={128}
        height={128}
      />
    </div>
  </div>
  
  <AnimatedTitle client:load text="Giancarlo Zevallos Lecca" />
  
  <p class="text-xl text-gray-600 mb-6 text-center max-w-2xl">
    AI Engineer | Automation | Agentic AI | ChatBot | LLM
  </p>
  
  <div class="flex gap-6 mt-4">
    <a
      href="mailto:giancarlo.zevallos.lecca@gmail.com"
      class="flex items-center gap-2 px-4 py-2 rounded-lg bg-white shadow-md hover:shadow-lg transition-all duration-300 text-primary hover:text-secondary group"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      Email
    </a>
    <a
      href="https://www.linkedin.com/in/giancarlo-zevallos"
      target="_blank"
      class="flex items-center gap-2 px-4 py-2 rounded-lg bg-white shadow-md hover:shadow-lg transition-all duration-300 text-primary hover:text-secondary group"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
      </svg>
      LinkedIn
    </a>
    <a
      href="https://www.youtube.com/@giancarlozevallos"
      target="_blank"
      class="flex items-center gap-2 px-4 py-2 rounded-lg bg-white shadow-md hover:shadow-lg transition-all duration-300 text-primary hover:text-secondary group"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
        <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
      </svg>
      YouTube
    </a>
  </div>
</div>

<style>
  @keyframes tilt {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(1deg); }
    75% { transform: rotate(-1deg); }
  }
  .animate-tilt {
    animation: tilt 10s infinite linear;
  }
</style>